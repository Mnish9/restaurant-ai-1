{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./src/dist",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["**/*"],
  "exclude": ["./node_modules"],
  "paths": {
    "*": ["./src/types/global.d.ts"]
  },
  "lib": ["es2015"],
  "files": ["src/types/global.d.ts"]
}
